{
	"name": "regression_tester",
	"version": "1.0.0",
	"description": "Puppeteer regression tests",
	"author": "Valerio Farrotti <valerio.farrotti@hotmail.it>",
	"main": "src/server.js",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "node -r dotenv/config -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
		"ext": "ts, js"
	},
	"scripts": {
		"start": "nodemon"
	},
	"dependencies": {
		"body-parser": "^1.20.0",
		"bootstrap": "^5.2.0",
		"bootstrap-icons": "^1.9.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.2",
		"express": "^4.16.1",
		"jquery": "^3.6.1",
		"less": "^4.1.3",
		"nodemon": "^2.0.20",
		"pixelmatch": "^5.3.0",
		"puppeteer": "^19.0.0",
		"set-cookie-parser": "^2.5.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/node": "^18.11.2",
		"@types/pixelmatch": "^5.2.4",
		"@types/pngjs": "^6.0.1",
		"@types/puppeteer": "^5.4.7",
		"typescript": "^4.8.4"
	}
}
